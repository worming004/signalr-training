@page
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">User</div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-3">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
            <div class="col-3">
                <input type="button" id="sendGroupButton" value="Send Message to group" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Group name
        </div>
        <div class="col-4">
            <input type="text" id ="groupNameInput" :>
        </div>
        <div class="col-6">
            <input type="button" id="connectToGroup" value="Connect to group">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>